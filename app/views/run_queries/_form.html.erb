<%= simple_form_for(@run_query) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sql, :as => :text, :label => 'SQL', :hint => '' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :value => 'Display Results' %>
    <%= f.button :submit, :value => 'Download CSV' %>
  </div>
<% end %>
